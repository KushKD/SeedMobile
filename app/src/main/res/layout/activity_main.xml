<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:orientation="vertical"
    tools:context="seeding.mobile.enrolment.aadhaar.hp.dit.aadhaarmobileseeding.MainActivity">




        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#a01d29"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Aadhaar Mobile Seeding"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"

                />
        </LinearLayout>

    <!-- Body -->
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">



            <!-- Relative LAyout Goes Here -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="15dip" >

                <!-- ListRow Left sied Thumbnail image -->

                <LinearLayout
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dip"
                    android:padding="3dip" >


                    <ImageView
                        android:id="@+id/list_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/aadhaar" />

                </LinearLayout>

                <!-- Rightend Arrow -->
                <ImageButton
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circularbutton"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/speaker" />






                <EditText
                    android:id="@+id/etaadhaar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tvCity"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Aadhaar Number"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="#a01d29"
                    android:textColorHint="#a01d29"
                    android:textSize="20dip" />

            </RelativeLayout>





            <!-- Phone No -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="15dip" >

                <!-- ListRow Left sied Thumbnail image -->

                <LinearLayout
                    android:id="@+id/thumbnail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dip"
                    android:padding="3dip" >


                    <ImageView
                        android:id="@+id/list_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/mobile" />

                </LinearLayout>

                <!-- Rightend Arrow -->
                <ImageButton
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circularbutton"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/speaker" />






                <EditText
                    android:id="@+id/etphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tvCity"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@+id/imageView12"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#a01d29"
                    android:textColorHint="#a01d29"
                    android:textSize="20dip" />

            </RelativeLayout>







            <!-- Email No -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="15dip" >

                <!-- ListRow Left sied Thumbnail image -->

                <LinearLayout
                    android:id="@+id/thumbnail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dip"
                    android:padding="3dip" >


                    <ImageView
                        android:id="@+id/list_image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top"
                        android:background="@drawable/email"
                        android:contentDescription="@string/app_name" />

                </LinearLayout>

                <!-- Rightend Arrow -->
                <ImageButton
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circularbutton"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/speaker" />






                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tvCity"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@+id/imageView13"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#a01d29"
                    android:textColorHint="#a01d29"
                    android:textSize="20dip" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40666666"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="15dip"
                android:text="Background Messages"
                android:textColor="#a01d29"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#F2F2F2"
            android:orientation="vertical">



          <!--  -->


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="left|center_horizontal|center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aadhaarlogo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a01d29"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>

        </LinearLayout>

</LinearLayout>



        </LinearLayout>

    </LinearLayout>


